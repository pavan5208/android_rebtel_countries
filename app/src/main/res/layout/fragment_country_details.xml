<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_back_country_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15"
        app:srcCompat="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15"
        android:textColor="@color/black"
        android:textSize="@dimen/app_text_size_20"
        app:layout_constraintLeft_toRightOf="@+id/im_back_country_details"
        app:layout_constraintTop_toTopOf="@+id/im_back_country_details"
        app:layout_constraintBottom_toBottomOf="@+id/im_back_country_details"
        android:text="@string/country_details"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_flag_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_5"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toBottomOf="@+id/im_back_country_details"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="@dimen/app_text_size_16"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/im_flag_details"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>